# ========================================
# Autonomous Agent Backend Configuration
# ========================================

# ==================
# DATABASE SETTINGS
# ==================
# PostgreSQL connection URL (required)
# Local: postgresql://username:password@localhost:5432/autonomous_agent
# Neon: postgresql://username:password@endpoint.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://username:password@localhost:5432/autonomous_agent

# ==================
# AI MODEL SETTINGS
# ==================
# Google Gemini API Key (required)
# Get from: https://makersuite.google.com/app/apikey
# Free tier available with generous quotas
GEMINI_API_KEY=your-gemini-api-key-here

# ==================
# SERVER SETTINGS
# ==================
# Server port (default: 8081)
PORT=8081

# Environment mode
NODE_ENV=development

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================
# AGENT SETTINGS
# ==================
# Maximum execution time per agent run (milliseconds)
AGENT_TIMEOUT=300000

# Maximum number of concurrent browser instances
MAX_BROWSER_INSTANCES=3

# Maximum iterations per agent execution
MAX_AGENT_ITERATIONS=20

# Delay between agent actions (milliseconds)
AGENT_ACTION_DELAY=1000

# ==================
# BROWSER SETTINGS
# ==================
# Run browser in headless mode (true/false)
BROWSER_HEADLESS=false

# Browser viewport width
BROWSER_WIDTH=1280

# Browser viewport height
BROWSER_HEIGHT=720

# Browser timeout (milliseconds)
BROWSER_TIMEOUT=30000

# ==================
# SECURITY SETTINGS
# ==================
# Enable code validation for tools and scripts
ENABLE_CODE_VALIDATION=true

# Maximum tool execution timeout (milliseconds)
TOOL_EXECUTION_TIMEOUT=30000

# Enable VM2 sandbox for code execution
ENABLE_SECURE_EXECUTION=true

# ==================
# LOGGING SETTINGS
# ==================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable query logging
LOG_QUERIES=false

# Enable request logging
LOG_REQUESTS=true

# ==================
# PERFORMANCE SETTINGS
# ==================
# Database connection pool size
DB_POOL_SIZE=10

# Database connection timeout (milliseconds)
DB_CONNECTION_TIMEOUT=2000

# Database idle timeout (milliseconds)
DB_IDLE_TIMEOUT=30000

# JSON body size limit
JSON_LIMIT=10mb

# ==================
# DEVELOPMENT SETTINGS
# ==================
# Enable TypeScript source maps in production
ENABLE_SOURCE_MAPS=false

# Enable detailed error messages
DETAILED_ERRORS=true

# Enable API documentation endpoint
ENABLE_API_DOCS=true