# CloudIDE Environment Configuration
# Copy this file to .env and configure with your specific values

# ====================================
# Application Configuration
# ====================================
NODE_ENV=development
PORT=5173
API_URL=http://localhost:3000/api
WS_URL=ws://localhost:3000/ws

# ====================================
# Database Configuration
# ====================================
DATABASE_URL=postgresql://cloudide:password@localhost:5432/cloudide_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=cloudide_dev
DATABASE_USER=cloudide
DATABASE_PASSWORD=password
DATABASE_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ====================================
# Authentication & Security
# ====================================
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=your-session-secret-change-this-in-production
BCRYPT_ROUNDS=12

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# Cloud Provider Configuration
# ====================================
# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_SESSION_TOKEN=

# S3 Configuration for Artifact Storage
S3_BUCKET_NAME=cloudide-artifacts
S3_BUCKET_REGION=us-east-1

# ====================================
# Monitoring & Analytics
# ====================================
# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=

# Analytics
ANALYTICS_KEY=your-analytics-key
GOOGLE_ANALYTICS_ID=

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# ====================================
# External Services
# ====================================
# Email Service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM_ADDRESS=noreply@cloudide.dev
EMAIL_FROM_NAME=CloudIDE

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# ====================================
# Feature Flags
# ====================================
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ADVANCED_EDITOR=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SECURITY_AUDIT=true
ENABLE_AI_FEATURES=false
ENABLE_COLLABORATION=true
ENABLE_BUILDER_ORCHESTRATION=true
ENABLE_AUDIT_LOGGING=true

# ====================================
# Builder Configuration
# ====================================
BUILDER_DEFAULT_TIMEOUT=600
BUILDER_MAX_CONCURRENT_TASKS=10
BUILDER_RESOURCE_LIMITS_CPU=2
BUILDER_RESOURCE_LIMITS_MEMORY=4096
BUILDER_ARTIFACT_RETENTION_DAYS=30

# Docker Registry for Builder Images
DOCKER_REGISTRY_URL=registry.hub.docker.com
DOCKER_REGISTRY_USERNAME=
DOCKER_REGISTRY_PASSWORD=

# ====================================
# Development Configuration
# ====================================
# Debug Settings
DEBUG=cloudide:*
LOG_LEVEL=debug
ENABLE_DEBUG_TOOLBAR=true

# Hot Reload
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost

# Test Configuration
TEST_DATABASE_URL=postgresql://cloudide:password@localhost:5432/cloudide_test
TEST_TIMEOUT=10000

# ====================================
# Production Configuration
# ====================================
# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem
FORCE_HTTPS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Security Headers
HELMET_CSP_REPORT_URI=
HELMET_HSTS_MAX_AGE=31536000

# ====================================
# Backup & Recovery
# ====================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cloudide-backups

# ====================================
# Kubernetes Configuration (if applicable)
# ====================================
K8S_NAMESPACE=cloudide
K8S_SERVICE_ACCOUNT=cloudide-service-account
K8S_CLUSTER_NAME=cloudide-cluster

# ====================================
# AI/ML Configuration
# ====================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2048

# Code Completion Service
CODE_COMPLETION_ENABLED=false
CODE_COMPLETION_PROVIDER=openai
CODE_COMPLETION_CACHE_TTL=3600

# ====================================
# Compliance & Audit
# ====================================
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for compliance
GDPR_ENABLED=true
HIPAA_ENABLED=false
SOC2_ENABLED=true

# Data Retention Policies
USER_DATA_RETENTION_DAYS=2555
LOG_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=365

# ====================================
# Performance Tuning
# ====================================
# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT_MS=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# File Upload Limits
MAX_FILE_SIZE=50MB
MAX_FILES_PER_UPLOAD=10

# ====================================
# Internationalization
# ====================================
DEFAULT_LOCALE=en-US
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,ja-JP,zh-CN

# ====================================
# Third-party Integrations
# ====================================
# GitHub Integration
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# Slack Integration
SLACK_BOT_TOKEN=
SLACK_WEBHOOK_URL=

# Discord Integration
DISCORD_BOT_TOKEN=
DISCORD_WEBHOOK_URL=

# ====================================
# Custom Configuration
# ====================================
# Add your custom environment variables here
CUSTOM_API_ENDPOINT=
CUSTOM_SERVICE_KEY=